extends layout

block content
  - var header = 'Sign up';
  - var btnSubmitLabel = 'Sign-up';
  - var userEmail = 'Email';  // User not signed in, so we just set the email field to "Email"
  - var blurb = 'We just need your email and a password.  You will be sent a email to confirm your address.'
  - var showSignUpBlurb = true;

  include account
  include modals/alert

block scripts
  script(type='text/javascript',src='/vendor/js/jquery.form.js')
  script(type='text/javascript',src='/js/views/signup.js')
  script(type='text/javascript',src='/js/form-validators/accountValidator.js')
  script(type='text/javascript',src='https://www.google.com/recaptcha/api/js/recaptcha_ajax.js')
  script(type='text/javascript').
    $(document).ready ( function(){
      var element = 'recaptcha_div';
      Recaptcha.create('6LeyxO4SAAAAAJJWW**************', element, {
      theme: 'red',
      callback: Recaptcha.focus_response_field});
    });